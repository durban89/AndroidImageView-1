<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gowhich.androidimageview.MainActivity">

    <TextView
        android:text="scaleType：center 缩放, 放在ImageView 中间"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <ImageView
        android:id="@+id/imageView1"
        android:scaleType="center"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:background="#F00" android:src="@drawable/background"/>

    <TextView
        android:text="scaleType：fitCenter 按照比例缩放, 放在ImageView 中间"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imageView2"
        android:scaleType="fitCenter"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="#F00" android:src="@drawable/background"/>

</LinearLayout>
